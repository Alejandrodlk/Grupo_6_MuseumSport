<!DOCTYPE html>
<html lang="es">

    

<%- include("./partials/head", { title : "Products all" }) %>

<link rel="stylesheet" href="/stylesheets/products.css"/>

<body id="principio">
    
    <%- include("./partials/header") %> 

    <div class="container" id="container">

    <main class="productsAll">
        <section >
            <div class="index__box-sectiones">
                <% products.forEach(product => { %>  
                <article class="index__box-article" >
                    <a href="/products/detail/<%= product.id %>">
                            <img class="index__image" height="65%" style="object-fit:cover;" src="/images/products/<%= product.images[0]?.name %>" alt="">

                    <div class="index__box-descripcion" style="height:35%">
                        <div class="index__precio-descuento">
                        <p class="index__precio">$<%= toThousand(product.price) %> </p>
                        <p class="index__descuento"><%= product.discount > 0 ? product.discount : null %> <%= product.discount > 0 ? '% OFF' : null %></p>
                        </div>
                        <p class="index__envio">Env√≠o gratis <i class="fas fa-bolt"></i></p>
                            <h5 class="index__descripcion"><%= product.title %></h5> 
                    </div>
                </a>
                </article>                    
                <% }) %>    
            </div>
        </section>

        <a href="#principio"><img src="/images/flecha.png" id="botonArriba" style="width:5%" height="50px">

    </main>

    <!--          ------------FOOTER------------       -->
    
    <%- include("./partials/footer") %> 

    <script src="/javascript/burguer.js"></script>
    <script src="/javascript/deploy-footer.js"></script>
    <script src="/javascript/index.js"></script>
    <script src="/javascript/product.js"></script>
    <script src="/javascript/boton-arriba.js"></script>
</body>

</html>
